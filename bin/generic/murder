#!/bin/sh
# Killall alternative, but more hacky.
[ -z "$1" ] && echo "Usage: $(basename $0) <process name>" && exit 1

PIDS="$(ps ax -o "pid,args" | cut -d" " -f1-2 | grep "$1\$" | cut -d" " -f1)"
[ ! -z "$PIDS" ] && kill -9 $PIDS && exit 0
[ -z "$PIDS" ] && echo "No processes found named '$1'." && exit 1
