#!/bin/sh

door() {
	case "$1" in
		open)
			ssh -F /dev/null open@192.168.2.10
			;;
		close)
			ssh -F /dev/null close@192.168.2.10
			;;
		*)
			echo "Usage: hqctl door open/close"
			exit 1
	esac
}

FN="$1"
shift
case "$FN" in
	door) door "$@" ;;
	cyber)
		export HASS="http://hub.cccffm.space"
		hass switch lounge_blue_light on
		[ -z "$1" ] || sleep "$1"
		[ -z "$1" ] && sleep 4
		hass switch lounge_blue_light off
		;;
	*)
		echo "Usage hqctl door ..."
		exit 1
esac
