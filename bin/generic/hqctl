#!/bin/sh

usage() {
	echo "Usage: $(basename $0) {door,cyber} [...]"
	exit 1
}

FN="$1"
[ -z "$FN" ] && usage
shift

door() {
	case "$1" in
		open)
			ssh -F /dev/null open@192.168.2.10
			;;
		close)
			ssh -F /dev/null close@192.168.2.10
			;;
		*)
			echo "Usage: hqctl door open/close"
			exit 1
	esac
}

case "$FN" in
	door) door "$@" ;;
	cyber)
		export HASS="http://hub.cccffm.space"
		hass switch on lounge_blue_light
		[ -z "$1" ] || sleep "$1"
		[ -z "$1" ] && sleep 4
		hass switch off lounge_blue_light
		;;
	*)
		echo "Usage hqctl door ..."
		exit 1
esac
