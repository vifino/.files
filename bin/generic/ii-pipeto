#!/usr/bin/env bash

# A (probably) bad II client interface.
# This time for piping into. Very simple.

# Vars
IIDIR="/tmp/ii-$USER"
IISRV="$IIDIR/$1"

# Logic
INFILE="$IISRV/in"

if [ "$2" != "" ]; then
	if [ ! -d "$IISRV/$2" ]; then
		echo "/j $2" > "$INFILE"
	fi
	INFILE="$IISRV/$2/in"
fi

exec tee "$INFILE"
