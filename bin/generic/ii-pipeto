#!/usr/bin/env bash

# A (probably) bad II client interface.
# This time for piping into. Very simple.

# Vars
IIDIR="/tmp/ii-$USER"
IISRV="$IIDIR/$1"

# Logic
INFILE="$IISRV/in"

if [ "$2" != "" ]; then
	chan="${2,,}"
	if [ ! -d "$IISRV/$chan" ]; then
		echo "/j $chan" > "$INFILE"
	fi
	INFILE="$IISRV/$chan/in"
fi

exec tee "$INFILE"
