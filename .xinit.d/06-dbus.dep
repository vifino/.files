#!/bin/sh

# Launch a dbus session, but only if we actually have dbus...
if [ -z "$DBUS_SESSION_BUS_ADDRESS" ]; then
	hasbin dbus-launch && eval `dbus-launch --exit-with-session --sh-syntax`
fi

# Set up the systemd user environment.
if hasbin systemctl; then
	systemctl --user import-environment DISPLAY XAUTHORITY
fi

if hasbin dbus-update-activation-environment; then
	dbus-update-activation-environment DISPLAY XAUTHORITY
fi
